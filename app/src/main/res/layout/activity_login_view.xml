<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:background="@color/login_title_color"
        android:layout_height="50dp">
        <!-- 返回 -->
        <LinearLayout
            android:id="@+id/ll_title_left"
            android:layout_width="45dp"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/logon_in"
            android:textColor="@color/optiontext_color_black"
            android:textSize="16dp" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <!-- 用户名 -->
    <LinearLayout
        android:layout_below="@+id/title_bar"
        android:id="@+id/ll_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/bg_logon_input"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/login_jobid_img"/>

        <EditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="@color/hint_text_color"
            android:hint="@string/hint_input_phone_num"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:maxLength="6"
            android:textColor="@color/optiontext_color_black"
            android:textSize="15dp"/>

    </LinearLayout>

    <!-- 密码 -->
    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ll_username"
        android:background="@drawable/bg_logon_input"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_password"
            android:layout_width="15dp"
            android:layout_height="22dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/password_img"/>
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/hint_input_password"
            android:inputType="textPassword"
            android:maxLength="6"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@color/hint_text_color"
            android:singleLine="true"
            android:textColor="@color/optiontext_color_black"
            android:textSize="16dp"/>
    </LinearLayout>
    <!--登录-->
    <TextView
        android:id="@+id/txt_login"
        android:background="@drawable/bg_logon_corner"
        android:textColor="@color/white"
        android:text="@string/logon_in_with_password"
        android:layout_below="@+id/ll_password"
        android:textSize="18dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <!--注册-->
    <LinearLayout
        android:id="@+id/rl_trgister"
        android:layout_below="@+id/txt_login"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_marginRight="33dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txt_trgister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/register_at_once"
            android:textColor="@color/login_register"
            android:textSize="15dp"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.mobile.fsaliance.common.common.CircleProgressBarView
            android:id="@+id/circleProgressBarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
