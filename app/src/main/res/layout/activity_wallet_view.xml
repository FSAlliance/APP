<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    >
    <include android:id="@+id/title_include"
        layout="@layout/include_toolbar_title"/>
    <ImageView
        android:src="@mipmap/bga_refresh_loading"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <TextView
        android:text="@string/my_money_balance"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/optiontext_color_black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ï¿¥"
            android:textColor="@color/optiontext_color_black"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_money_count"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:textColor="@color/optiontext_color_black"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_wallet_present"
        android:text="@string/mine_wallet_present"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_logoff_corner"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/txt_present_record"
        android:text="@string/ming_present_record"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/optiontext_color_black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_wallet_present"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/txt_record_of_income"
        android:text="@string/ming_record_of_income"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/optiontext_color_black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_wallet_present"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
