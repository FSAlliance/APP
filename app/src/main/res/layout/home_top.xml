<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <!--中间分类-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <!--女装-->
            <LinearLayout
                android:id="@+id/home_middle_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_top_img"
                    android:layout_height="@dimen/home_top_img"
                    android:src="@drawable/img_home_middle_female" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_middle_female"
                    android:textColor="@color/asset_child" />
            </LinearLayout>

            <!--男装-->
            <LinearLayout
                android:id="@+id/home_middle_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_top_img"
                    android:layout_height="@dimen/home_top_img"
                    android:src="@drawable/img_home_middle_male" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_middle_male" />
            </LinearLayout>

            <!--内衣-->
            <LinearLayout
                android:id="@+id/home_middle_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_top_img"
                    android:layout_height="@dimen/home_top_img"
                    android:src="@drawable/img_home_middle_underclothes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_middle_underclothes" />
            </LinearLayout>

            <!--美妆-->
            <LinearLayout
                android:id="@+id/home_middle_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_top_img"
                    android:layout_height="@dimen/home_top_img"
                    android:src="@drawable/img_home_middle_cosmetics" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_middle_cosmetics" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <!--美食-->
            <LinearLayout
                android:id="@+id/home_middle_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_top_img"
                    android:layout_height="@dimen/home_top_img"
                    android:src="@drawable/img_home_middle_cate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_middle_cate"
                    android:textColor="@color/asset_child" />
            </LinearLayout>

            <!--母婴-->
            <LinearLayout
                android:id="@+id/home_middle_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_top_img"
                    android:layout_height="@dimen/home_top_img"
                    android:src="@drawable/img_home_middle_baby" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_middle_baby" />
            </LinearLayout>

            <!--家具-->
            <LinearLayout
                android:id="@+id/home_middle_seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_top_img"
                    android:layout_height="@dimen/home_top_img"
                    android:src="@drawable/img_home_middle_furniture" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_middle_furniture" />
            </LinearLayout>

            <!--其他-->
            <LinearLayout
                android:id="@+id/home_middle_eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/home_top_img"
                    android:layout_height="@dimen/home_top_img"
                    android:src="@drawable/img_home_middle_other" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_middle_other" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/login_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/home_middle_like" />
    </LinearLayout>

</LinearLayout>
