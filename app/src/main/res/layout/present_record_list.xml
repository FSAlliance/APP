<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_item_parent"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/img_income_record"
            android:layout_marginLeft="15dp"
            android:src="@drawable/logon_input_bg"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:id="@+id/ll_income_record_info"
            android:layout_toLeftOf="@+id/txt_income_record_symbol"
            android:layout_toRightOf="@+id/img_income_record"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_income_record_type"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:text="@string/submit"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textColor="@color/optiontext_color_black"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txt_income_record_time"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/submit"
                android:singleLine="true"
                android:textColor="@color/gif_loading"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_income_record_symbol"
            android:textColor="@color/optiontext_color_black"
            android:text="+"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/txt_income_record_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_income_record_count"
            android:textColor="@color/optiontext_color_black"
            android:text="0.05"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"/>
    </RelativeLayout>

</LinearLayout>
