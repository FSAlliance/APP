<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.fsaliance.share.ShareActivity"
    android:orientation="vertical">
    <include layout="@layout/activity_custome_title"/>

    <!--分享APP-->
    <RelativeLayout
        android:id="@+id/rl_share_app"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_share_app"
            android:layout_width="@dimen/remote_setting_menu_btn_width"
            android:layout_height="@dimen/remote_setting_menu_btn_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/more_list_about" />

        <TextView
            android:id="@+id/txt_share_app"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/share_app"
            android:layout_toRightOf="@+id/img_share_app"
            android:textColor="@color/optiontext_color_black"
            android:textSize="@dimen/fontSize" />
        <ImageView
            android:id="@+id/img_share_app_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="@dimen/remote_setting_menu_btn_width"
            android:layout_height="@dimen/remote_setting_menu_btn_height"
            android:layout_centerVertical="true"
            android:background="@drawable/more_list_about" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"
            android:layout_marginLeft="27dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <!--邀请好友一起赚钱-->
    <RelativeLayout
        android:id="@+id/rl_share_to_invite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_share_to_invite"
            android:layout_width="@dimen/remote_setting_menu_btn_width"
            android:layout_height="@dimen/remote_setting_menu_btn_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/more_list_about" />

        <TextView
            android:id="@+id/txt_share_to_invite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/share_to_invite"
            android:layout_toRightOf="@+id/img_share_to_invite"
            android:textColor="@color/optiontext_color_black"
            android:textSize="@dimen/fontSize" />
        <ImageView
            android:id="@+id/img_share_to_invite_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="@dimen/remote_setting_menu_btn_width"
            android:layout_height="@dimen/remote_setting_menu_btn_height"
            android:layout_centerVertical="true"
            android:background="@drawable/more_list_about" />
    </RelativeLayout>
</LinearLayout>
