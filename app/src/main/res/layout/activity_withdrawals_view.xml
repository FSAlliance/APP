<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    >
    <include android:id="@+id/title_include"
        layout="@layout/include_toolbar_title"/>
    <ImageView
        android:src="@mipmap/bga_refresh_loading"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="￥"
            android:textColor="@color/read"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_money_count"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:textColor="@color/read"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:text="@string/present_moneny"
        android:background="@color/login_bg"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:layout_marginLeft="15dp"
        android:layout_height="50dp" />
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txt_money"
            android:text="￥"
            android:textColor="@color/optiontext_color_black"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/edit_input_money"
            android:layout_toRightOf="@+id/txt_money"
            android:background="@null"
            android:singleLine="true"
            android:inputType="number"
            android:layout_toLeftOf="@+id/txt_present_all"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_present_all"
            android:text="@string/present_all"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:background="@color/white"
        android:text="@string/please_input_present_moneny"
        android:gravity="center|left"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
